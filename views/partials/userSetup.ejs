
<%if(typeof user == 'object' && user){%>
    <div id="">
       <h3>personalize your info to view your custom preview</h3>
        
            <form action="/userDataUpload"method="post">
                <div class="formData">
                        <h3> add/update your info for your trading card.</h3>
                        <label>chapter</label><input type="text" name="chapter" id="cardchapter" placeholder="<%= user.chapter || 'add your Chapter' %>" value="<%= user.chapter || 'add your Chapter' %>"><br>
